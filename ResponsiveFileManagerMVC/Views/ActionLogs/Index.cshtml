@model IEnumerable<ResponsiveFileManagerMVC.Models.ActionLog>

@{
    ViewBag.Title = "員工操作紀錄";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>員工操作紀錄</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("員工工號")
        </th>
        <th>
            @Html.DisplayName("操作起始頁面")
        </th>
        <th>
            @Html.DisplayName("操作結束頁面")
        </th>
        <th>
            @Html.DisplayName("操作方法")
        </th>
        <th>
            @Html.DisplayName("手機登入")
        </th>
        <th>
            @Html.DisplayName("IP位址")
        </th>
        <th>
            @Html.DisplayName("操作時間")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Operator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Refer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Method)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MobleDevices)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IPAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequestTime)
        </td>
        <td>
            @Html.ActionLink("刪除", "Delete", new { id=item.LogId })
        </td>
    </tr>
}

</table>
